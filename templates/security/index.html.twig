{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!
{% endblock %}

{% block body %}

	<div class="container">
		<h1>{{ controller_name }}! âœ…</h1>
		{{ form_start(form) }}

		<div class="row">
			<div class="col-md-4">
				{{ form_row(form.username, {'label':"Nom d'utilisateur:", 'attr': {'placeholder':"Votre nom d'utilisateur..."}}) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.firstname, {'label':"Votre prenom:", 'attr': {'placeholder':"Votre prenom..."}}) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.lastname, {'label':"Votre nom:", 'attr': {'placeholder':"Votre nom..."}}) }}
			</div>
		</div>

		<div class="row">
			<div class="col-12">
				{{ form_row(form.email, {'label':"Votre email:", 'attr': {'placeholder':"Votre email..."}}) }}
			</div>
			<div class="col-12">
				{{ form_row(form.password, {'label':"Votre mot de passe:", 'attr': {'placeholder':"Votre mot de passe..."}}) }}
			</div>
			<div class="col-12">
				{{ form_row(form.passwordConfirm, {'label':"Confirmer votre mot de passe:", 'attr': {'placeholder':"Confirmer votre mot de passe..."}}) }}
			</div>
		</div>

		<button type="submit" class="btn btn-success">
			S'inscrire
		</button>
		{{ form_end(form) }}

		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}


	</div>
{% endblock %}
